/**index.wxss**/
page{
  background-color: #DBDBDB;
}
.container{
  width: 100%;
  height: 100vh;
}
swiper{
  margin: 10rpx;
  border-radius: 20rpx;
  background-color: #FFFFFF;
  width: 97%;
  height: 220px;
}
.img{
  border-top: 1px solid #EDEDED;
  border-bottom: 1px solid #EDEDED;
}
.img image{
  display: block;
  border-bottom: 1px solid #EDEDED;
}

.icon{
  margin: 10rpx;
  border-radius: 35rpx;
  background-color: #FFFFFF;
  display: flex;
  padding: 12px 0;
}
.icon image{
  display: block;
  width: 30px;
  height: 30px;
  margin: 0 auto;
  padding-top: 10px;
}
.icon text{
  display: block;
  text-align: center;
  width: 100%;
  font-size: 14px;
  color: #333;
  padding-top: 10px;
}
.icon navigator{
  flex: 1 0 25%;
}

.list{
  border-top:1px solid #EDEDED; 
  background-color: #FFFFFF;
  display: flex;
  justify-content: space-between;  
  flex-wrap:wrap;
  box-sizing: content-box;
}
.list .item{
  flex:0 1 50%;
  /* border-bottom:1px solid #EDEDED;  */
  padding-top: 15px;
}
.list .item:nth-child(odd){
  /* border-right:1px solid #EDEDED;  */
  margin-right: -1px;
}

.list .item .text{
  display: block;
  font-size: 12px;
  line-height: 22px;
  margin:0 10px;
}

.list .item .product{
  display: block;
  width: 160px;
  height: 160px;
  margin: 0 auto;
}
.price{
  display: flex;
  margin:0 10px;
  justify-content:space-between;
}

.price text{
  font-size: 16px;
  color: #ff5f19;
}

.price image{
  display: block;
  width: 20px;
  height: 20px;
  padding-top: 2px;
}
.order{
  position: absolute;
  width: 100rpx;
  height: 100rpx;
  left: 600rpx;
  top: 1300rpx;
  transform: rotate(-90deg);
  z-index: 1;
}